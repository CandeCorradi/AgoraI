<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="MovilApp.Views.Login.LoginView"
          xmlns:viewModels="clr-namespace:MovilApp.ViewModels.Login"
          NavigationPage.HasNavigationBar="False"
          BackgroundColor="Pink">
    
    <ContentPage.BindingContext>
    <viewModels:LoginViewModel/>
 </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Start" Padding="30">
            <Grid RowDefinitions="2*,2*,2*,*,*" ColumnDefinitions="auto,*">
                <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="End" TextColor="DeepPink" VerticalOptions="Center">Email:</Label>
                <Entry Grid.Row="0" Grid.Column="1" 
                       Text="{Binding Email}" BackgroundColor="Transparent" TextColor="Black"
                       Margin="10,10,0,10"></Entry>

                <Label Grid.Row="1" Grid.Column="0" 
                       VerticalTextAlignment="Center" HorizontalOptions="End" TextColor="DeepPink" VerticalOptions="Center">Contrase침a:</Label>
                <Entry Grid.Row="1" Grid.Column="1" 
                       Text="{Binding Password}" BackgroundColor="Transparent" TextColor="Black"
                        IsPassword="True"
                       Margin="10,10,0,10"></Entry>
                <CheckBox IsChecked="{Binding RecordarContrase침a}"
                          Grid.Row="2" Grid.Column="0" 
                          VerticalOptions="Center"
                          HorizontalOptions="End"
                          ></CheckBox>
                <Label Grid.Row="2" Grid.Column="1"
                       VerticalOptions="Center" TextColor="DeepPink"
                       >Recordar contrase침a</Label>

                <Button Text="Iniciar sesi칩n"
                        x:Name="btnIniciarSesion"
                        Grid.Row="3" Grid.Column="0"
                        Command="{Binding IniciarSesionCommand}"
                        Grid.ColumnSpan="2" 
                        BackgroundColor="Transparent" 
                        TextColor="DeepPink" 
                        FontAttributes="Bold"
                        BorderColor="DeepPink"
                        BorderWidth="2"
                        CornerRadius="8"
                        Margin="0,0,0,20" 
                        ></Button>

                <Button Text="Registrarse"
                        x:Name="btnRegistrarse"
                        Grid.Row="4" Grid.Column="0"
                        Command="{Binding RegistrarseCommand}"
                        Grid.ColumnSpan="2" 
                        BackgroundColor="Transparent" 
                        TextColor="DeepPink" 
                        FontAttributes="Bold"
                         BorderColor="DeepPink"
                         BorderWidth="2"
                         CornerRadius="8"
                        ></Button>              
                
            </Grid>
            <ActivityIndicator IsRunning="{Binding EstaDescargando}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>